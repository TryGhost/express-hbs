{
  "env": {
    "node": true
  },

  "globals": {
    "describe": true,
    "beforeEach": true,
    "it": true
  },

  "rules": {
    "brace-style": [1, "1tbs"],
    "curly": [0, "multi"],
    "eqeqeq": [1, "smart"],
    "max-depth": [1, 4],
    "max-params": [1, 5],
    "new-cap": 2,
    "new-parens": 0,
    "no-constant-condition": 0,
    "no-div-regex": 1,
    "no-else-return": 1,
    "no-extra-parens": 1,
    "no-floating-decimal": 2,
    "no-inner-declarations": 2,
    "no-lonely-if": 1,
    "no-multi-str": 0,
    "no-nested-ternary": 2,
    "no-new-object": 0,
    "no-new-func": 0,
    "no-shadow": 0,
    "no-underscore-dangle": 0,
    "no-unused-vars": 2,
    "quotes": [2, "single", "avoid-escape"],
    "radix": 2,
    "keyword-spacing": "error",
    "object-curly-spacing": ["error", "never"],
    "array-bracket-spacing": ["error", "never"],
    "strict": 2,
    "wrap-iife": 2
  }
}
